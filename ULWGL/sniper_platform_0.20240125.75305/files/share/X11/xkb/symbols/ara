    key <AE03> { [ Arabic_3,     numbersign, 3, NoSymbol ] };
    key <AE04> { [ Arabic_4,         dollar, 4, NoSymbol ] };
    key <AE05> { [ Arabic_5, Arabic_percent, 5, U0609    ] };
    key <AE06> { [ Arabic_6,    asciicircum, 6, NoSymbol ] };
